alias: Play Music
description: Plays music via music assistant
sequence:
  - variables:
      media_player: >-
        {{ area_entities('Living Room') | select('match', 'media_player.') |
        list }}
  - choose:
      - conditions:
          - condition: template
            value_template: "{{ 'album' in query.lower() }}"
        sequence:
          - data:
              media_type: album
              enqueue: replace
              media_id: "{{ query }}"
              entity_id: "{{ media_player }}"
            action: music_assistant.play_media
      - conditions:
          - condition: template
            value_template: "{{ 'playlist' in query.lower() }}"
        sequence:
          - data:
              media_type: playlist
              enqueue: replace
              media_id: "{{ query }}"
              entity_id: "{{ media_player }}"
            action: music_assistant.play_media
    default:
      - data:
          media_type: track
          enqueue: replace
          media_id: "{{ query }}"
          radio_mode: true
          entity_id: "{{ media_player }}"
        action: music_assistant.play_media
fields:
  query:
    description: The title of the song, album, artist, or playlist to play.
    example: Greatest Hits album
    required: true
  area:
    example: Living Room
    description: The area
    required: true
